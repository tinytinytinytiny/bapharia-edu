---
import { getStoryblokImageDimensions } from "@utils";

const { title, align } = Astro.props;

const defaultBanners = [
	"https://a-us.storyblok.com/f/1014865/2560x1440/acbb4174ca/banner-1.png/m/",
	"https://a-us.storyblok.com/f/1014865/1920x1080/dec9f282d0/banner-2.jpg/m/",
	"https://a-us.storyblok.com/f/1014865/1920x1080/50b0a917dd/banner-3.jpg/m/"
];
const getRandomBanner = () => {
	const src = defaultBanners[Math.floor(Math.random() * defaultBanners.length)];
	const { width, height } = getStoryblokImageDimensions(src);
	return { src, width, height };
};
const { src, width, height } = getRandomBanner();
---

<header class="page-title" data-align={align}>
	<div class="page-title__inner stack">
		<h1>{title}</h1>
		<slot />
	</div>
	<slot name="img">
		<img src={src} width={width} height={height} alt="" decoding="async" />
	</slot>
</header>