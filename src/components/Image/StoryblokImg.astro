---
import { storyblokImage } from "@utils";

const {
	class: className,
	src,
	alt,
	decoding = "async",
	loading = "auto",
	widths,
	sizes = "100vw",
} = Astro.props;

const img = storyblokImage(src);
---

<img
	class={className}
	src={img.optimizedUrl}
	srcset={img.generateSrcset(widths)}
	sizes={sizes}
	alt={alt}
	width={img.width}
	height={img.height}
	decoding={decoding}
	loading={loading}
	crossorigin
/>
